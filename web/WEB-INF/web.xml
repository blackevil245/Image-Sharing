<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>imageSaving</servlet-name>
        <servlet-class>io.ImageSaving</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userAdding</servlet-name>
        <servlet-class>io.UserAdding</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageQuerying</servlet-name>
        <servlet-class>io.ImageQuerying</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>io.Login</servlet-class>
    </servlet>
      <servlet>
        <servlet-name>Commenting</servlet-name>
        <servlet-class>io.Commenting</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>imageSaving</servlet-name>
        <url-pattern>/imageSaving</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userAdding</servlet-name>
        <url-pattern>/userAdding</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageQuerying</servlet-name>
        <url-pattern>/ImageQuerying</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Commenting</servlet-name>
        <url-pattern>/Commenting</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>